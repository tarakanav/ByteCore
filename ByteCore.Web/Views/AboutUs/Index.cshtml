@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container px-5 mb-5">
        <!-- About Us Section -->
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">About Us</span></h1>
        </div>
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-11 col-xl-9 col-xxl-8">
                <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                    <div class="card-body p-5">
                        <h2 class="fw-bolder">Who We Are</h2>
                        <p>At ByteCore, we believe that learning should be accessible, engaging, and directly applicable to the challenges of today’s technology-driven world. Founded by a team of industry veterans and academic experts, we are committed to empowering learners with the knowledge and skills needed to excel in software development, data science, cybersecurity, and more.</p>
                        <p>ByteCore is an innovative platform focused on providing high-quality courses in the field of technology, offering students an opportunity to stay ahead in the ever-evolving tech landscape. Our expert instructors guide students toward mastering complex topics, helping them to successfully navigate the professional world.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Us Section -->
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Contact Us</span></h1>
        </div>
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-11 col-xl-9 col-xxl-8">
                <div class="card overflow-hidden shadow rounded-4 border-0">
                    <div class="card-body p-5">
                        <h2 class="fw-bolder">Send Us a Message</h2>
                        <form action="mailto:teamlead@bytecore.com" method="POST" enctype="text/plain">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Your Message</label>
                                <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
