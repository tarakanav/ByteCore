@{
    ViewBag.Title = "Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container px-5 my-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bolder mb-0">
            <span class="text-gradient d-inline">Platform Overview</span>
        </h1>
        <p class="lead text-muted">Discover how ByteCore empowers learners with cutting-edge technology courses.</p>
    </div>
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-11 col-xl-9 col-xxl-8">

            <!-- Key Features Section -->
            <section class="mb-5">
                <h2 class="fw-bolder mb-4">Key Features</h2>
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <div class="col">
                        <div class="card h-100 shadow border-0 rounded-4">
                            <div class="card-body p-4">
                                <div class="feature bg-gradient-primary-to-secondary text-white rounded-3 mb-3">
                                    <i class="bi bi-book"></i>
                                </div>
                                <h5 class="card-title">Expert-Led Courses</h5>
                                <p class="card-text text-muted">Engage with industry professionals through structured, project-based learning modules.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 shadow border-0 rounded-4">
                            <div class="card-body p-4">
                                <div class="feature bg-gradient-primary-to-secondary text-white rounded-3 mb-3">
                                    <i class="bi bi-code-slash"></i>
                                </div>
                                <h5 class="card-title">Hands-On Labs</h5>
                                <p class="card-text text-muted">Practice real-world scenarios in our cloud-based lab environment.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 shadow border-0 rounded-4">
                            <div class="card-body p-4">
                                <div class="feature bg-gradient-primary-to-secondary text-white rounded-3 mb-3">
                                    <i class="bi bi-people"></i>
                                </div>
                                <h5 class="card-title">Community Support</h5>
                                <p class="card-text text-muted">Join a vibrant community of learners, mentors, and alumni.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 shadow border-0 rounded-4">
                            <div class="card-body p-4">
                                <div class="feature bg-gradient-primary-to-secondary text-white rounded-3 mb-3">
                                    <i class="bi bi-award"></i>
                                </div>
                                <h5 class="card-title">Certification Paths</h5>
                                <p class="card-text text-muted">Earn recognized certificates to showcase your achievements to employers.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Statistics Section -->
            <section class="mb-5">
                <h2 class="fw-bolder mb-4">By the Numbers</h2>
                <div class="row text-center">
                    <div class="col-6 col-md-3 mb-4">
                        <h3 class="display-6 fw-bold text-gradient">1,200+</h3>
                        <p class="text-muted mb-0">Courses Available</p>
                    </div>
                    <div class="col-6 col-md-3 mb-4">
                        <h3 class="display-6 fw-bold text-gradient">50k+</h3>
                        <p class="text-muted mb-0">Active Learners</p>
                    </div>
                    <div class="col-6 col-md-3 mb-4">
                        <h3 class="display-6 fw-bold text-gradient">200+</h3>
                        <p class="text-muted mb-0">Expert Instructors</p>
                    </div>
                    <div class="col-6 col-md-3 mb-4">
                        <h3 class="display-6 fw-bold text-gradient">10k+</h3>
                        <p class="text-muted mb-0">Certifications Awarded</p>
                    </div>
                </div>
            </section>

            <!-- Curriculum Breakdown Section -->
            <section>
                <h2 class="fw-bolder mb-4">Curriculum Tracks</h2>
                <div class="list-group">
                    <a class="list-group-item list-group-item-action">
                        <strong>Software Development</strong> – Full-stack, backend, and frontend frameworks.
                    </a>
                    <a class="list-group-item list-group-item-action">
                        <strong>Data Science</strong> – Python, R, machine learning, and data visualization.
                    </a>
                    <a class="list-group-item list-group-item-action">
                        <strong>Cybersecurity</strong> – Ethical hacking, network security, and compliance.
                    </a>
                    <a class="list-group-item list-group-item-action">
                        <strong>Cloud Computing</strong> – AWS, Azure, GCP, and DevOps practices.
                    </a>
                </div>
            </section>

        </div>
    </div>
</div>
