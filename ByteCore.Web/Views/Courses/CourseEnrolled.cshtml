@model ByteCore.Domain.CourseScope.Course

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="py-5 bg-light">
    <div class="container px-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">@Model.Title</h1>
                <p class="lead">@Model.ShortDescription</p>
                <ul class="list-unstyled">
                    <li><strong>Instructor:</strong> @Model.Instructor</li>
                    <li><strong>Duration:</strong> @Model.Duration</li>
                    <li><strong>Start Date:</strong> @Model.StartDate.ToString("MMMM dd, yyyy")</li>
                </ul>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Chapter", new { courseId = Model.Id, chapterId = 1 })" class="btn btn-success btn-lg d-inline">To The Course</a>
                    @if (TempData["PassMessage"] != null)
                    {
                        <div class="alert alert-success mt-4">
                            @TempData["PassMessage"]
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6 text-center">
                <img class="img-fluid rounded shadow" src="@Model.ImageUrl" alt="@Model.Title" />
            </div>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container px-5">
        <div class="row">
            <div class="col-md-3">
                @{
                    var completedChapters = Model.Chapters.Count(c => c.UsersCompleted.Select(x => x.Email).Contains(User.Identity.Name));
                    var totalChapters = Model.Chapters.Count;
                    var progressPercentage = (double)completedChapters / totalChapters * 100;
                }
                <div class="progress mt-4">
                    <div class="progress-bar" role="progressbar" style="width: @progressPercentage%;" aria-valuenow="@progressPercentage" aria-valuemin="0" aria-valuemax="100">
                        @progressPercentage% Complete
                    </div>
                </div>
                <nav id="course-nav" class="nav flex-column sticky-top" style="top: 100px;">
                    @foreach (var chapter in Model.Chapters)
                    {
                        <a class="nav-link" href="#chapter-@chapter.GetChapterNumber()">@chapter.Title</a>
                    }
                </nav>
            </div>
            <div class="col-md-9">
                <div data-bs-spy="scroll" data-bs-target="#course-nav" data-bs-offset="100" class="scrollspy-example" tabindex="0">
                    @foreach (var chapter in Model.Chapters)
                    {
                        <section id="chapter-@chapter.GetChapterNumber()" class="chapter-item mb-5">
                            <h2>@chapter.Title</h2>
                            <button class="btn btn-sm btn-outline-success mark-complete" data-chapter-id="@(chapter.Id)">
                                @(chapter.UsersCompleted.Select(x => x.Email).Contains(User.Identity.Name) ? "Completed" : "Mark as Complete")
                            </button>
                            @foreach (var section in chapter.Sections)
                            {
                                <div class="mb-3">
                                    <h3>@(section.Title)</h3>
                                    <p>@(section.Description)</p>
                                </div>
                            }
                        </section>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    #course-nav .nav-link.active {
        font-weight: bold;
        color: #e21e80;
    }
    .chapter-item.completed {
        background-color: #e0ffe0;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.mark-complete').click(function () {
                var button = $(this);
                var chapterId = button.data('chapter-id');
                $.post('@Url.Action("MarkChapterComplete", "Chapter")', { courseId: @Model.Id, chapterId: chapterId }, function (response) {
                    if (response.success) {
                        button.closest('.chapter-item').addClass('completed');
                        button.text('Completed');
                    }
                });
            });
        });
    </script>
}
