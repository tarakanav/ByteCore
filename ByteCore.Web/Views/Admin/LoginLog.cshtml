@model IEnumerable<ByteCore.Domain.UserScope.LoginLog>
@{
    ViewBag.Title = "Login Log";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Login Log</h2>

<table class="table table-hover">
    <thead>
    <tr>
        <th>#</th>
        <th>User Id</th>
        <th>User Email</th>
        <th>Login Time</th>
        <th>IP Address</th>
        <th>User Agent</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var entry in Model)
    {
        <tr>
            <td>@entry.Id</td>
            <td>@(entry.User?.Id.ToString() ?? "—")</td>
            <td>@(entry.User?.Email ?? "—")</td>
            <td>@entry.LoginTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>@entry.IpAddress</td>
            <td style="max-width:300px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                @entry.UserAgent
            </td>
        </tr>
    }
    </tbody>
</table>
@Html.Partial("_Pager")