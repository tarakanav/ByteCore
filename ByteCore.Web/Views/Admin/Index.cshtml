                    <i class="icofont icofont-social-twitter bg-c-yellow card1-icon"></i>
                    <span class="text-c-yellow f-w-600">Enrollments</span>
                    <h4>@Model.TotalEnrollments</h4>
                    <div>
                                                            <span class="f-left m-t-10 text-muted">
                                                                <i class="text-c-yellow f-16 icofont icofont-bar m-r-10"></i>Latest at @Model.LastEnrollmentDate.ToString("dd MMM yyyy")
                                                            </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- card1 end -->
        <!-- statstic card start -->
        <div class="col-md-12 col-xl-4">
            <div class="card widget-statstic-card">
                <div class="card-header">
                    <div class="card-header-left">
                        <h5>Recent Visits</h5>
                        <p class="p-t-10 m-b-0 text-c-blue">From last week</p>
                    </div>
                </div>
                <div class="card-block">
                    <i class="icofont icofont-presentation-alt st-icon bg-c-blue"></i>

                    <div class="text-left">
                        <h3 class="d-inline-block">@Model.ActiveUsers.Sum()</h3>
                        <span
                            class="f-right">@Model.ActiveUsers.LastOrDefault() today</span>
                    </div>

                </div>
            </div>
        </div>
        <!-- statstic card end -->
        <!-- statstic card start -->
        <div class="col-md-6 col-xl-4">
            <div class="card widget-statstic-card">
                <div class="card-header">
                    <div class="card-header-left">
                        <h5>New Users</h5>
                        <p class="p-t-10 m-b-0 text-c-pink">From last week</p>
                    </div>
                </div>
                <div class="card-block">
                    <i class="icofont icofont-users-social st-icon bg-c-pink txt-lite-color"></i>

                    <div class="text-left">
                        <h3 class="d-inline-block">@Model.NewUsers.Sum()</h3>
                        <span
                            class="f-right">@Model.NewUsers.LastOrDefault() today</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- statstic card end -->
        <!-- statstic card start -->
        <div class="col-md-6 col-xl-4">
            <div class="card widget-statstic-card">
                <div class="card-header">
                    <div class="card-header-left">
                        <h5>New Enrollments</h5>
                        <p class="p-t-10 m-b-0 text-c-yellow">From last week</p>
                    </div>
                </div>
                <div class="card-block">
                    <i class="icofont icofont-chart-line st-icon bg-c-yellow"></i>

                    <div class="text-left">
                        <h3 class="d-inline-block">@Model.NewEnrollments.Sum()</h3>
                        <span
                            class="f-right">@Model.NewUsers.LastOrDefault() today</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- statstic card end -->
        <div class="col-md-12">
            <div class="card email-sent-card">
                <div class="card-header ">
                    <div class="card-header-left ">
                        <h5>Statistics</h5>
                    </div>
                    <div class="card-header-right">
                        <ul class="list-unstyled card-option">
                            <li><i class="icofont icofont-simple-left "></i></li>
                            <li><i class="icofont icofont-maximize full-card"></i></li>
                            <li><i class="icofont icofont-minus minimize-card"></i></li>
                            <li><i class="icofont icofont-refresh reload-card"></i></li>
                            <li><i class="icofont icofont-error close-card"></i></li>
                        </ul>
                    </div>
                </div>
                <div class="card-block">
                    <div id="email-sent" style="max-width:100%;height:400px;"
                         data-active-users="@Newtonsoft.Json.JsonConvert.SerializeObject(Model.ActiveUsers)"
                         data-new-users="@Newtonsoft.Json.JsonConvert.SerializeObject(Model.NewUsers)"
                         data-course-enrollments="@Newtonsoft.Json.JsonConvert.SerializeObject(Model.NewEnrollments)"
                         data-dates='@Newtonsoft.Json.JsonConvert.SerializeObject(Enumerable.Range(0, 7)
                                         .Select(i => DateTime.Today.AddDays(-6 + i).ToString("yyyy-MM-dd"))
                                         .ToList())'>
                        >
                    </div>
                </div>
            </div>
        </div>
        <!-- Email Sent End -->
