        <div class="col-md-6 col-xl-4">
            <div class="card">
                <div class="card-header">
                    <div class="card-header-left">
                        <h5>Browser Status</h5>
                    </div>
                    <div class="card-header-right">
                        <ul class="list-unstyled card-option">
                            <li><i class="icofont icofont-simple-left"></i></li>
                            <li><i class="icofont icofont-maximize full-card"></i></li>
                            <li><i class="icofont icofont-minus minimize-card"></i></li>
                            <li><i class="icofont icofont-refresh reload-card"></i></li>
                            <li><i class="icofont icofont-error close-card"></i></li>
                        </ul>
                    </div>
                </div>
                <div class="card-block">
                    @foreach (var browser in Model.BrowserUsages)
                    {
                        var i = 0;
                        var bgColorClass = "bg-c-yellow";

                        if (browser.Key.Contains("Chrome"))
                        {
                            bgColorClass = "bg-c-blue";
                        }
                        else if (browser.Key.Contains("Firefox"))
                        {
                            bgColorClass = "bg-c-pink";
                        }
                        else if (browser.Key.Contains("Safari"))
                        {
                            bgColorClass = "bg-c-yellow";
                        }
                        else if (browser.Key.Contains("Explorer"))
                        {
                            bgColorClass = "bg-c-green";
                        }
                        else if (browser.Key.Contains("Opera"))
                        {
                            bgColorClass = "bg-c-yellow";
                        }
                        else if (browser.Key.Contains("Edge"))
                        {
                            bgColorClass = "bg-c-yellow";
                        }

                        <div class="browser-card b-t-default p-t-15 p-b-15">
                            <p class="d-inline-block m-0">@browser.Key</p>
                            <button
                                class="btn @bgColorClass btn-round float-right btn-browser">
                                @(browser.Value)%
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Weather End -->
