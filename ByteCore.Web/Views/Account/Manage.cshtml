@model ByteCore.Web.Models.UserModel
@{
    ViewBag.Title = "Manage Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="py-5">
    <div class="container px-5">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bolder">Manage Account</h1>
        </div>
        <form method="post" action="@Url.Action("Manage", "Account")">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email" required>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="button" class="btn btn-secondary text-white" onclick="history.back()">Back</button>
        </form>
    </div>
</section>
