@using ByteCore.Domain.CourseScope
@model ByteCore.Web.Models.ChapterModel

@{
    ViewBag.Title = Model.Chapter.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container px-5">
        <div class="row">
            <div class="col-md-3">
                <nav id="course-nav" class="nav flex-column sticky-top" style="top: 100px;">
                    @foreach (var chapter in Model.Chapter.Course.Chapters)
                    {
                        <a class="nav-link @(chapter.Id == Model.Chapter.Id ? "selected" : "")"
                           href="@Url.Action("Index", "Chapter", new { courseId = Model.Chapter.Course.Id, chapterId = chapter.GetChapterNumber() })">
                            Chapter @chapter.GetChapterNumber(): @chapter.Title
                        </a>
                        if (chapter.Sections != null && chapter.Sections.Count > 0)
                        {
                            <div class="ms-3">
                                @foreach (var section in chapter.Sections)
                                {
                                    <a class="nav-link"
                                       href="@Url.Action("Index", "Chapter", new { courseId = Model.Chapter.Course.Id, chapterId = chapter.GetChapterNumber() })#section-@(chapter.GetChapterNumber() + "." + section.GetSectionNumber())">
                                        @(chapter.GetChapterNumber() + "." + section.GetSectionNumber()): @(section.Title)
                                    </a>
                                }
                            </div>
                        }
                    }
                </nav>
            </div>

            <div class="col-md-9">
                <div data-bs-spy="scroll" data-bs-target="#course-nav" data-bs-offset="100" class="scrollspy-example"
                     tabindex="0">
                    <h2>@Model.Chapter.Title</h2>
                    <p>@Model.Chapter.Description</p>

                    <div class="row">
                        @foreach (var section in Model.Chapter.Sections)
                        {
                            <div class="col-12 mb-4">
                                <div class="card">
                                    <div class="card-body" id="section-@(Model.Chapter.GetChapterNumber() + "." + section.GetSectionNumber())">
                                        <h5 class="card-title">@(section.Title)</h5>

                                        <p class="text-muted">@(section.Description)</p>

                                        <p>@(section.TextContent)</p>

                                        @if (section.Type == SectionType.Video && !string.IsNullOrEmpty(section.VideoUrl))
                                        {
                                            <div class="embed-responsive embed-responsive-16by9">
                                                <iframe class="embed-responsive-item" src="@(section.VideoUrl)"
                                                        allowfullscreen></iframe>
                                            </div>
                                        }
                                        else if (section.Type == SectionType.Quiz && section.Quiz != null)
                                        {
                                            ViewBag.SectionId = section.Id;
                                            @Html.Partial("_QuizPartial", section.Quiz)
                                            if (Model.QuizResults.TryGetValue(section.Id, out var result))
                                            {
                                                <div class="mt-3">
                                                    @if (result.Quiz.PassingPercentage <=
                                                         result.Answers.Count(x => x.IsCorrect) * 100 / section.Quiz.Questions.Count)
                                                    {
                                                        <div class="alert alert-success text-center">
                                                            🎉 Passed (@result.Answers.Count(x => x.IsCorrect)/@(section.Quiz.Questions.Count))
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="alert alert-danger text-center">
                                                            😞 You scored @result.Answers.Count(x => x.IsCorrect)/@(section.Quiz.Questions.Count) — try again!
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <form
                                action="@Url.Action("CompleteChapter", "Chapter", new { courseId = Model.Chapter.Course.Id, chapterId = Model.Chapter.GetChapterNumber() })"
                                method="post">
                                <button type="submit" class="btn btn-success">Mark as Completed</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    #course-nav .nav-link.active {
        color: #8550ff;
    }
    
    #course-nav .nav-link.selected {
        font-weight: bold;
        color: #e21e80;
    }
</style>
