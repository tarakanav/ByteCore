@model ByteCore.Web.Models.QuizModel

@{
    ViewBag.Title = Model.Title;
}

<div class="container mt-5">
    <h2>@Model.Title</h2>
    <form method="post" action="@Url.Action("Submit", "Quizzes", new { id = Model.Id })">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <div class="mb-3">
                <p>@Model.Questions[i].QuestionText</p>
                @for (int j = 0; j < Model.Questions[i].Options.Count; j++)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="userAnswers[@i]" value="@j" id="q@(i)_@(j)">
                        <label class="form-check-label" for="q@(i)_@(j)">
                            @Model.Questions[i].Options[j]
                        </label>
                    </div>
                }
            </div>
        }
        <button type="submit" class="btn btn-success">Отправить ответы</button>
    </form>
</div>